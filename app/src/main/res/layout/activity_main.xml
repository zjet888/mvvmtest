<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.jet.mvvmtest.LoginViewModel" />
    </data>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_username"
            android:gravity="center_vertical"
            android:hint="@string/user_name"
            android:inputType="text"
            android:text="@={viewModel.username}"
            bind:username="@{viewModel.username}"
            android:drawableLeft="@drawable/ic_username" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_password"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:text="@={viewModel.password}"
            bind:password="@{viewModel.password}"
            android:drawableLeft="@drawable/ic_password" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()-> viewModel.onLoginClicked()}"
            bind:clicked="@{viewModel.clicked}"
            android:text="@string/log_in" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            bind:progressbarStatus="@{viewModel.progressbarStatus}"
            android:visibility="@{viewModel.progressbarStatus}" />

    </LinearLayout>

</layout>